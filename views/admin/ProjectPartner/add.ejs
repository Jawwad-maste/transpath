<%- include("../partials/header.ejs") %>
    <h1 class="text-3xl text-black pb-6">Add Project Partner</h1>

    <div class="flex flex-wrap justify-center">
        <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
            <p class="text-xl pb-6 flex items-center">
                <i class="fas fa-list mr-3"></i> Add Project Parnter
            </p>
            <div class="leading-loose">
                <form class="p-10 bg-white rounded shadow-xl" action="/admin/projectpartner" method="POST"
                    enctype="multipart/form-data">
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="name">Partner Name</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="name" type="text"
                            name="name" placeholder="Partner Name" required>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="photo">Profile Image</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" type="file" id="photo"
                            name="photo" placeholder="image file(png/jpeg)" required />
                    </div>

                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="link">Link</label>
                        <input class="w-full px-5 py-2 text-gray-700 bg-gray-200 rounded" type="text" id="link"
                            name="link" rows="4" placeholder="Link" />
                    </div>

                    <div class="mt-6">
                        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded"
                            type="submit">Add</button>
                    </div>
                    <div class="mt-2">
                        <a class="hover:text-blue-500" href="/admin/staffs">Go Back</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <%- include("../partials/footer.ejs") %>