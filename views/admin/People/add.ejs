<%- include("../partials/header.ejs") %>
    <h1 class="text-3xl text-black pb-6">Add People</h1>

    <div class="flex flex-wrap justify-center">
        <div class="w-full lg:w-1/2 my-6 pr-0 lg:pr-2">
            <p class="text-xl pb-6 flex items-center">
                <i class="fas fa-list mr-3"></i> Add People
            </p>
            <div class="leading-loose">
                <form class="p-10 bg-white rounded shadow-xl" action="/admin/people" method="POST"
                    enctype="multipart/form-data">
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="name">Name</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="name" type="text"
                            name="name" placeholder="Name" required>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="designation">Designation</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="designation" type="text"
                            name="designation" placeholder="Designation" required>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="department">Department</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="department" type="text"
                            name="department" placeholder="Department" required>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="institute">Institute</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="institute" type="text"
                            name="institute" placeholder="Institute" required>
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="description">Description</label>
                        <input class="w-full px-5  py-4 text-gray-700 bg-gray-200 rounded" id="description" type="text"
                            name="description" placeholder="Description" required>
                    </div>



                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="photo">Profile Image</label>
                        <input class="w-full px-5 py-4 text-gray-700 bg-gray-200 rounded" type="file" id="photo"
                            name="photo" placeholder="image file(png/jpeg)" required />
                    </div>

                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="linkedin">LinkedIn</label>
                        <input class="w-full px-5 py-2 text-gray-700 bg-gray-200 rounded" type="text" id="linkedin"
                            name="linkedin" rows="4" placeholder="LinkedIn" />
                    </div>
                    <div class="mt-2">
                        <label class="block text-sm text-gray-600" for="twitter">Twitter</label>
                        <input class="w-full px-5 py-2 text-gray-700 bg-gray-200 rounded" type="text" id="twitter"
                            name="twitter" rows="4" placeholder="Twitter" />
                    </div>

                    <div class="mt-2">
                        <label for="type" class="block text-sm text-gray-600">Type</label>
                        <select class="w-full px-5 py-2 text-gray-700 bg-gray-200 rounded" id="type" name="type">
                            <option value="core" class="block text-sm text-gray-600" selected>Core Team</option>
                            <option value="pi">PI</option>
                            <option value="copi">Co PI</option>
                            <option value="phd">Research Scholar</option>
                            <option value="brah">Brahmaputra River Basin</option>
                            <option value="nile">Nile River Basin</option>
                            <option value="gezi">Gezira Irrigation</option>
                            <option value="meko">Mekong Delta</option>
                            <option value="yala">Yala and Kingwal Wetlands</option>
                            <option value="xoch">Xochimilco Wetland</option>
                            <option value="wadd">Wadden Sea</option>
                        </select>
                    </div>

                    <div class="mt-6">
                        <button class="px-4 py-1 text-white font-light tracking-wider bg-gray-900 rounded"
                            type="submit">Add</button>
                    </div>
                    <div class="mt-2">
                        <a class="hover:text-blue-500" href="/admin/people">Go Back</a>
                    </div>
                </form>

            </div>
        </div>
    </div>
    <%- include("../partials/footer.ejs") %>